            @Html.DisplayFor(modelItem => item.txtHoraClase)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diasSemana)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Horarios", new { id=item.idHorario })" class="btn btn-warning btn-xs">
                <span class="glyphicon glyphicon-pencil"></span>
            </a>
            <a href="@Url.Action("Details", "Horarios", new { id=item.idHorario })" class="btn btn-info btn-xs">
                <span class="glyphicon glyphicon-th-list"></span>
            </a>
            <a href="@Url.Action("Delete", "Horarios", new { id = item.idHorario})" class="btn btn-danger btn-xs">
